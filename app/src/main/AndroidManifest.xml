<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.fragranceflow">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FragranceFlow"
        tools:targetApi="31">
        <activity
            android:name=".view.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity android:name=".view.ProductActivity" />
        <activity android:name=".view.ProductListActivity" />
        <activity android:name=".view.CustomerActivity" />
        <activity android:name=".view.SaleActivity" />
        <activity android:name=".view.SearchSalesActivity" />
        <activity android:name=".view.SaleListActivity" />
        <activity android:name=".view.UpdateProductActivity" />
        <activity android:name=".view.UpdateCustomerActivity" />
    </application>

</manifest>